#! /bin/sh

pgrep -x sxhkd > /dev/null || sxhkd &

# Force US keyboard layout
sleep 1 && setxkbmap us

if [[ $(xrandr -q | grep 'HDMI-1 connected')]]; then
  xrandr --output eDP-1 --primary --mode 1920x1080 --rotate normal --output HDMI-1 --mode 1920x1080 --rotate normal --right-of eDP-1
fi

# bspc monitor -d I II III IV V VI VII VIII IX X
# this is for 2 monitor setup
bspc monitor eDP-1 -d I II III IV
bspc monitor HDMI-1 -d V VI VII VIII

bspc config border_width         2
bspc config window_gap          12

bspc config focused_border_color "#a1bfc4"
bspc config normal_border_color "#0B151C"
bspc config urgent_border_color "#0B151C"

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a Chromium desktop='^2'
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off

#Autostart
sxhkd & 
picom --config $HOME/.config/picom/picom.conf &
nitrogen --restore &
rofi &
polybar top &
polybar top-external &
